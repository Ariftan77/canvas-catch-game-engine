{
  "name": "naraya-rain-game",
  "version": "1.0.0",
  "description": "Naraya Rain - Catch the Refreshment! Official event game for Naraya grand opening in Batam, Indonesia.",
  "main": "electron/main.js",
  "author": "Arif Tan",
  "license": "MIT",
  "homepage": ".",
  "scripts": {
    "electron": "electron .",
    "electron-dev": "ELECTRON_IS_DEV=true electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-all": "electron-builder --win --mac --linux",
    "dist": "npm run build-win",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.narayarain.game",
    "productName": "Naraya Rain Game",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "electron/**/*",
      "!node_modules",
      "!dist",
      "!*.md",
      "!test-*.html",
      "!debug-*.html"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "electron/icon.ico",
      "publisherName": "Naraya Indonesia",
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "electron/icon.ico",
      "uninstallerIcon": "electron/icon.ico",
      "installerHeaderIcon": "electron/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Naraya Rain Game"
    },
    "mac": {
      "target": "dmg",
      "icon": "electron/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "electron/icon.png"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {}
}